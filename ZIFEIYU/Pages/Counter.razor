        <Dialogue Messages="Messages"></Dialogue>
        @if (davinciOutput != null)
        {
            foreach (var item in davinciOutput.Choices)
            {
                <SurveyPrompt Title="@item.Text" />

            }
        }
    </div>
    <div class="bottom">
