@using ZIFEIYU.Model;

@foreach (var item in Messages)
{
    @if (item.Role!="user")
    {
        <div style="display:flex;   ">
            <div style=" margin-bottom: 10px; padding: 10px; max-width: 80%">
                <MudCard>
                    <MudCardContent>
                        <MudText>@item.Content</MudText>
                    </MudCardContent>
                </MudCard>
            </div>
           
        </div>
    }
    else
    {
        <div style="display:flex;" dir="rtl">
            <div style=" margin-bottom: 10px; padding: 10px; max-width: 80%">
                <MudCard>
                    <MudCardContent>
                        <MudText>@item.Content</MudText>
                    </MudCardContent>
                </MudCard>
            </div>
          
        </div>
    }
}

@code {
    [Parameter]
    public List<DialogueMessage> Messages { get; set; }
}

